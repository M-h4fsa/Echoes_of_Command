<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #eadcc7;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eoc.ui.StatsController">
    <children>
        <ImageView fitHeight="405.0" fitWidth="620.0" layoutX="-2.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@levelbg.png" />
            </image>
        </ImageView>
        <Label layoutX="235.0" layoutY="31.0" text="Statistics" textFill="#374232">
            <font>
                <Font name="Droid Serif Bold Italic" size="28.0" />
            </font>
        </Label>
        <TextArea fx:id="historyTextArea" blendMode="MULTIPLY" layoutX="15.0" layoutY="208.0" prefHeight="172.0" prefWidth="574.0" promptText="History of played leaders..." editable="false" style="-fx-background-color: #4c5d45;" >
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </TextArea>
        <Button fx:id="backButton" layoutX="15.0" layoutY="14.0" mnemonicParsing="false" onAction="#onBackButtonClick" style="-fx-background-color: #4c5d45;" text="Back" textFill="WHITE">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>
        <ImageView blendMode="MULTIPLY" fitHeight="55.0" fitWidth="77.0" layoutX="529.0" layoutY="1.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@logo.png" />
            </image>
        </ImageView>
        <TextFlow fx:id="avgTimeFlow" layoutX="83.0" layoutY="96.0"
                  prefHeight="93.0" prefWidth="109.0"
                  textAlignment="CENTER" style="-fx-text-alignment: center;" />

        <TextFlow fx:id="totalLevelsFlow" layoutX="261.0" layoutY="96.0"
                  prefHeight="93.0" prefWidth="109.0"
                  textAlignment="CENTER" style="-fx-text-alignment: center;" />

        <TextFlow fx:id="progressFlow" layoutX="434.0" layoutY="96.0"
                  prefHeight="93.0" prefWidth="109.0"
                  textAlignment="CENTER" style="-fx-text-alignment: center;" />

        <Label layoutX="111.0" layoutY="78.0" text="avg time :">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <Label layoutX="276.0" layoutY="78.0" text="total levels :">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <Label layoutX="456.0" layoutY="78.0" text="progress :">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
